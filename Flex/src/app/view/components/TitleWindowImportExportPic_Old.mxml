<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  skinClass="app.skin.skinTitleWindowImage"
					  width="600" minHeight="500">
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[			
			import app.model.vo.ImportExportPicVO;
			
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			import mx.events.IndexChangedEvent;
			import mx.managers.PopUpManager;
			
			public static const VIDEO:String = "video";
			
			[Bindable]public var video:String;
			
			[Bindable]private var videoVisible:Boolean = true;
			
			[Bindable]public var importExportPics:ArrayCollection;
			
			[Bindable]private var importExportPic:ImportExportPicVO;
			
			[Bindable]private var imageIndex:Number = 0;		
			
			[Bindable]private var viewIndex:Number = 0;	
			
			[Bindable]private var imageSource:String;
			
			[Bindable]private var movieSource:String;	
			
			public function set ImageIndex(value:Number):void
			{
				if(value >= importExportPics.length)
				{
					imageIndex = importExportPics.length - 1;
				}				
				else if(value < 0)
				{
					imageIndex = 0;
				}
				else
				{
					imageIndex = value;
				}
				
				videoVisible = ((imageIndex == 0) && video);
				
				importExportPic = importExportPics[imageIndex];
				
				if(importExportPic.T_ImportExportType == 1)
				{
					viewIndex = 0;
					imageSource = importExportPic.T_ImportExportPicPicPath;
				}
				else
				{
					viewIndex = 1;
					movieSource = importExportPic.T_ImportExportPicPicPath;					
				}
			}			
			
			protected function imageClose_clickHandler(event:MouseEvent):void
			{
				videoPlayer.stop();
				
				PopUpManager.removePopUp(this);
			}			
			
			protected function content_updateCompleteHandler(event:FlexEvent):void
			{
				videoPlayer.play()
			}
		]]>
	</fx:Script>
	
	<s:Label top="25" horizontalCenter="0" text="{importExportPic.T_ImportExportPicTitle}" color="0xFFFFFF" fontSize="25"/>
	<s:Image top="20" right="25" buttonMode="true" source="@Embed('assets/image/x.png')" 
			 click="imageClose_clickHandler(event)"/>
	
	<s:Image id="imagePre" visible="{imageIndex &gt; 0}" x="20" buttonMode="true"
			 click="{ImageIndex = imageIndex - 1}" source="@Embed('assets/image/图片左按钮.png')"
			 verticalCenter="0"/>
	<s:Image id="imageNext" visible="{importExportPics.length - 1 &gt; imageIndex}" right="20"
			 buttonMode="true" click="{ImageIndex = imageIndex + 1}"
			 source="@Embed('assets/image/图片右按钮.png')" verticalCenter="0"/>
	
	<mx:ViewStack width="460" height="380" top="60" horizontalCenter="0" selectedIndex="{viewIndex}" 
				  creationPolicy="all">
		<s:NavigatorContent width="100%" height="100%" label="Image">
			<s:Image width="100%" height="100%"
					 source="{imageSource}"/>
		</s:NavigatorContent>
		<s:NavigatorContent width="100%" height="100%" label="Movie" updateComplete="content_updateCompleteHandler(event)">
			<s:VideoPlayer id="videoPlayer" width="100%" height="100%"
						   source="{movieSource}" autoPlay="false"/>
		</s:NavigatorContent>
	</mx:ViewStack>
		
	<s:Label color="0xFFFFFF" fontSize="16" fontWeight="bold" paddingTop="10"
			 text="{importExportPic.T_ImportExportPicRemark}"
			 y="440" horizontalCenter="0"/>
</s:SkinnableContainer>
