<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   x="20" y="117" skinClass="app.skin.skinTitleWindowFloor"
			   color="0xFFFFFF" fontSize="15" fontWeight="bold">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[							
			import app.model.vo.TrafficVO;
			
			import mx.managers.PopUpManager;
			
			[Bindable]public var Traffic:TrafficVO;
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout gap="5" paddingBottom="35" paddingLeft="35" paddingRight="35" paddingTop="10"/>
	</s:layout>
	
	<s:Group width="100%" height="40">		
		<s:Label verticalCenter="0" left="5" text="{Traffic.T_TrafficPicTitle}" fontSize="20"/>
		<s:Image verticalCenter="0" right="5" buttonMode="true" source="@Embed('assets/image/x.png')" click="PopUpManager.removePopUp(this)"/>
	</s:Group>
	
	<s:Image width="320" 
			 skinClass="app.skin.skinErrorImage" 
			 source="{Traffic.T_TrafficPicmgPath}"/>
	
	<s:HGroup width="100%">
		<s:Label text="{Traffic.T_TrafficPicRremark}" width="100%"/>		
	</s:HGroup>
</s:SkinnableContainer>
