<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  skinClass="app.skin.skinTitleWindowImage"
					  width="500" minHeight="400">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import app.model.vo.ComponentVO;
			import app.model.vo.MediaVO;
			
			import mx.collections.ArrayCollection;
			import mx.managers.PopUpManager;
			
			public static const VIDEO:String = "video";
			
			[Bindable]public var video:String;
			
			[Bindable]private var videoVisible:Boolean = true;
			
			[Bindable]public var medias:ArrayCollection;
			
			[Bindable]private var media:MediaVO;
			
			[Bindable]private var imageIndex:Number = 0;			
			public function set ImageIndex(value:Number):void
			{
				if(value >= medias.length)
				{
					imageIndex = medias.length - 1;
				}				
				else if(value < 0)
				{
					imageIndex = 0;
				}
				else
				{
					imageIndex = value;
				}
				
				videoVisible = ((imageIndex == 0) && video);
				
				media = medias[imageIndex];
			}			
		]]>
	</fx:Script>
	
	<s:Label top="25" horizontalCenter="0" text="{media.T_FloorMediaName}" color="0xFFFFFF" fontSize="25"/>
	<s:Image top="20" right="25" buttonMode="true" source="@Embed('assets/image/x.png')" click="PopUpManager.removePopUp(this);"/>
	
	<s:Image id="imagePre" top="180" left="23" buttonMode="true" source="@Embed('assets/image/图片左按钮.png')"
			 click="{ImageIndex = imageIndex - 1}" visible="{imageIndex > 0}"/>
	<s:Image id="imageNext" top="180" right="23" buttonMode="true" source="@Embed('assets/image/图片右按钮.png')" 
			 click="{ImageIndex = imageIndex + 1}" visible="{medias.length - 1 > imageIndex}"/>
	
	<s:Image width="360" height="280" top="60" horizontalCenter="0" source="{media.T_FloorMediaPicPath}"/>
	
	<s:HGroup id="groupBottom" paddingBottom="30" y="340" horizontalCenter="0">
		<s:Image buttonMode="true" visible="{videoVisible}" source="@Embed('assets/image/视频图标.png')" click="dispatchEvent(new Event(VIDEO));"/>
		<s:Label paddingTop="10" text="{media.T_FloorMediaremark}" color="0xFFFFFF" fontSize="16" fontWeight="bold"/>
	</s:HGroup>
</s:SkinnableContainer>
